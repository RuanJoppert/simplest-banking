{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": ["node", "jest"],
    "rootDir": "src",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules","**/dist", "src/**/*.spec.ts"],
}
